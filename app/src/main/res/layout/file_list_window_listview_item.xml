<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/file_list_window_listview_item"
    >

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_list_window_listview_item_checkbox"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_list_window_listview_item_text"
        android:layout_toRightOf="@id/file_list_window_listview_item_checkbox"
        android:textColor="#000"
        android:text="示例"
        android:layout_centerVertical="true"
        android:textSize="10pt"
        />

</RelativeLayout>