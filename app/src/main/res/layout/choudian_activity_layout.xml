<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/ChouDianActivityLayout"
    android:background="@drawable/bm"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ChouDian_activity_NB"
        android:background="#fff"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ChouDian_activity_leftbutton"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ChouDian_activity_title"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:textSize="8pt"
            android:text="抽点"

            />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ChouDian_activity_rightbutton"
            android:background="@drawable/folderbutton1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/empty_view"
        android:layout_below="@id/ChouDian_activity_NB"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:text="摇一摇以获得随机名单"
        android:textSize="8pt"
        android:textColor="#000"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ChouDian_activity_listview"
        android:layout_below="@id/empty_view"
        android:divider="#205ec1"
        android:dividerHeight="1dp"
        android:background="#fff"
        ></ListView>



</RelativeLayout>